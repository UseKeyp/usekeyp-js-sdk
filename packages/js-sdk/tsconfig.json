{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,

    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
  ],
}